<main>
    <section>
        <h2>Post an Image!</h2>

        <form id="post-image-form"
            action="/posts/create"
            method="POST"
            enctype="multipart/form-data">
            <fieldset>
                <label for="title"> Title</label>
                <input type="text" id="post-title" name="title" required/>

                <label for="description"> Image Description</label>
                <input type="text" id="post-desc" name="description" required/>

                <label for="Image">Attach Image</label>
                <input id="file" type="file"  name="uploadImage" required/>

                <div class="checkbox1">
                    <input type="checkbox" required/><br>
                    <label for="Accept Policy">Do you accept the Acceptable Use Policy?</label>
                </div>
                


                <input type="submit" id="submit-button" />
            </fieldset>
        </form>
    </section>
</main>