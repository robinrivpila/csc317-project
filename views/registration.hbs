<main>
    <section>
        <h2>Sign Up</h2>

        <form id="registration-form"
            method="POST"
            action="/users/register"
            enctype="application/x-www-form-urlencoded">
            <fieldset>
                <label for="username">Username </label>
                <input type="text" name="username" id="username" />
                <div id="username-error" class="error"></div>

                <label for="email">Email</label>
                <input type="email" name="email" />


                <label for="password">Password</label>
                <input type="password" id="password" name="password" />
                <div id="password-error" class="error"></div>

                <label for="confirm password">Confirm Password</label>
                <input type="password" id="confirmed-password" name="cpassword"/>
                <div id="confirmed-password-error" class="error"></div>

                <div class="checkbox1">
                    <input type="checkbox"  required />
                    <label for="Accept if 13+">User is 13+ years of age</label>
                    
                </div>
                
                <div class="checkbox1">
                    <input type="checkbox" required />
                    <label for="TOS and Privacy rules?">Do you accept our <a id="TOS-link" href="#">TOS and Privacy Rules </a></label>
                    
                    
                </div>
                

                <input type="submit" id="submit-button" value="Sign Up" />
                <a href="/login"> Login</a>
            </fieldset>
        </form>

    </section>
</main>